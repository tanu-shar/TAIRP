    <script>
    function validate() {
    let n = document.getElementById('N').value.trim();
    let l = document.getElementById('L').value.trim();
    let e = document.getElementById('E').value.trim();
    let ph = document.getElementById('ph').value.trim();
    let p = document.getElementById('P').value.trim();
    let q = document.getElementById('question').value.trim();

    if (n === "") {
        alert("Please fill in your first name");
    }
    if (l === "") {
        alert("Please fill in your last name");
    }
    if (e === "") {
        alert("Please fill in your email");
    }
    if (ph === "") {
        alert("Please fill in your contact");
    }
    if (p === "") {
        alert("Please enter your answer");
    }
    if (q === "") {
        alert("Please enter your question");
    }
}
    </script>
